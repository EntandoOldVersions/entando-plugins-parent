    <field name="newsletterConfig.subject">
        <field-validator type="requiredstring">
            <message key="requiredstring"/>
        </field-validator>
    </field>
    
    <field name="newsletterConfig.htmlHeader">
        <field-validator type="requiredstring">
            <message key="requiredstring"/>
        </field-validator>
    </field>
    
    <field name="newsletterConfig.htmlFooter">
        <field-validator type="requiredstring">
            <message key="requiredstring"/>
