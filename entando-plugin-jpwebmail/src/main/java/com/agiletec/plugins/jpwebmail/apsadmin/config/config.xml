<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>
	
    <package name="jpwebmail_do/jpwebmail/Config" namespace="/do/jpwebmail/Config" extends="japs-default">
    	
    	<action name="edit" class="jpwebmailWebMailConfigAction" method="edit" >
            <result type="tiles">admin.jpwebmail.Config.entry</result>
        	<interceptor-ref name="japsDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
    	<action name="save" class="jpwebmailWebMailConfigAction" method="save" >
            <result name="input" type="tiles">admin.jpwebmail.Config.entry</result>
            <result type="tiles">admin.jpwebmail.Config.savedConfirmation</result>
        	<interceptor-ref name="japsValidationStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
    </package>
    
</struts>